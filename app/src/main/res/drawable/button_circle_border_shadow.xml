<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:gravity="center">

        <shape>
            <!-- Background Color -->
            <solid android:color="@android:color/transparent" />

            <!-- Border Color -->
            <stroke
                android:width="4dp"
                android:color="#55000000" />

            <!-- Round Corners -->
            <corners android:radius="500dp" />
        </shape>
    </item>

    <item
        android:top="3dp"
        android:left="3dp"
        android:right="3dp"
        android:bottom="3dp"
        android:gravity="center">

        <shape>
            <!-- Background Color -->
            <solid android:color="@color/colorPrimary" />

            <!-- Border Color -->
            <stroke
                android:width="4dp"
                android:color="@android:color/transparent" />

            <!-- Round Corners -->
            <corners android:radius="500dp" />
        </shape>
    </item>
</layer-list>
